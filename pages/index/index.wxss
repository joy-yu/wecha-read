
/*article*/

text{
  display: flex;
  flex-direction: column;
}

.article{
  padding: 0 1em;
}

.title{
  text-align: center;
  font-size: 2em;
  letter-spacing: 2px;
  font-weight: bold;
  border-bottom: 1px solid #666;
  padding-bottom: .2em;
  margin-bottom: .3em;
}

.author{
  text-align: center;
  font-weight: bold;
}

.main text{
    text-indent: 2em;
    margin: 1em 0;
    line-height: 1.8em;
    text-align: justify;
}


.random-area{
  display: flex;
  margin: 3em 0 6em;
}

.bottom{
  position: fixed;
  bottom:0;left: 0;right: 0;
  display: flex;
  flex-direction: row;
  height:50px;
  color:#818180;
  background: #2a2a29;
  transition: 1s;
}
.bottom text{
  flex:1;
  text-align: center;
  justify-content: center;
  border-right: 2px solid #343434;
  font-size: 14px;
}